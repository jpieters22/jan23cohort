@model LoginUser 

<h3>Login</h3>

<div class="newForm">
<form asp-action="Login" asp-controller="User" method="post">
    <div class="mb-3">
        <label asp-for="LoginEmail"></label>
        <input class="form-control" asp-for="LoginEmail">
        <span asp-validation-for="LoginEmail"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LoginPassword"></label>
        <input class="form-control" asp-for="LoginPassword">
        <span asp-validation-for="LoginPassword"></span>
    </div>
    <button class="btn btn-success">Login</button>
</form>
</div>