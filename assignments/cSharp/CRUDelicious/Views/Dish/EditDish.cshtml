@model Dish

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
</head>
<body>
    <h1>Edit @Model.Name</h1>
    <nav>
        <a href="/">Home</a>
        <a href="/dishes/new">Add a Dish</a>
    </nav>
    <form asp-action="Edit" asp-controller="Dish" method="post" asp-route-DishId="@Model.DishId">
    <div class="leftInput">
        <input type="text" asp-for="Chef">
        <span asp-validation-for="Chef"></span><br>
        <input type="text" asp-for="Name">
        <span asp-validation-for="Name"></span><br>
        <input type="text" asp-for="Calories">
        <span asp-validation-for="Calories"></span>
    </div>
    <div class="middleSelector">
        <select asp-for="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness"></span>
    </div>
    <div class="rightText">
        <textarea asp-for="Description" cols="30" rows="10"></textarea>
        <span asp-validation-for="Description"></span>
        <button>Add Dish!</button>
    </div>
    </form>
</body>
</html>