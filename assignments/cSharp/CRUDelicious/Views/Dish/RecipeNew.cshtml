@model Dish

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~css/chef.css">
    <title>Create New Dish</title>
</head>
<body>
    <h1>Add a New Dish!</h1>
    <nav>
        <a href="/">Home</a>
        <a href="/dishes/new">Add a Dish</a>
    </nav>
    <form asp-action="Create" asp-controller="Dish" method="post">
    <div class="leftInput">
        <label asp-for="Chef"></label>
        <input type="text" asp-for="Chef">
        <span asp-validation-for="Chef"></span><br>
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name">
        <span asp-validation-for="Name"></span><br>
        <label asp-for="Calories"></label>
        <input type="text" asp-for="Calories">
        <span asp-validation-for="Calories"></span>
    </div>
    <div class="middleSelector">
        <label asp-for="Tastiness"></label>
        <select asp-for="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <span asp-validation-for="Tastiness"></span>
    </div>
    <div class="rightText">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" cols="30" rows="10"></textarea>
        <span asp-validation-for="Description"></span>
        <button type="submit">Add Dish!</button>
    </div>
    </form>
</body>
</html>